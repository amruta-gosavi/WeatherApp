<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">left</item>
        <item name="android:inputType">textCapWords|textNoSuggestions</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/font_semibold</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

</resources>