<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/WeatherFragment">

    <fragment
        android:id="@+id/WeatherFragment"
        android:name="com.mvvm.weather.presentation.WeatherFragment"
        android:label="@string/weather_data"
        tools:layout="@layout/weather_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/WeatherDetailsFragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/WeatherDetailsFragment"
        android:name="com.mvvm.weather.presentation.WeatherDetailsFragment"
        android:label="@string/weather_details"
        tools:layout="@layout/weather_details_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/WeatherFragment" />
    </fragment>
</navigation>